<Page
    x:Class="NavigationPractice.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Home" Grid.Row="0"/>
        <TimePicker Header="Choose a time" Grid.Row="1"/>
        <DatePicker Header="Choose a date" Grid.Row="2"/>
        <CalendarDatePicker Header="Choose a date" Grid.Row="3"/>
    </Grid>
</Page>
